# Alternative GNU Make workspace makefile autogenerated by Premake

ifndef config
  config=releasewithsymbols_x86
endif

ifndef verbose
  SILENT = @
endif

ifeq ($(config),releasewithsymbols_x86)
  gmsv_lz4_config = releasewithsymbols_x86
  helpers_config = releasewithsymbols_x86
  lua_shared_config = releasewithsymbols_x86

else ifeq ($(config),release_x86)
  gmsv_lz4_config = release_x86
  helpers_config = release_x86
  lua_shared_config = release_x86

else
  $(error "invalid configuration $(config)")
endif

PROJECTS := gmsv_lz4 helpers lua_shared

.PHONY: all clean help $(PROJECTS) garrysmod_common

all: $(PROJECTS)

garrysmod_common: helpers lua_shared

gmsv_lz4: helpers lua_shared
ifneq (,$(gmsv_lz4_config))
	@echo "==== Building gmsv_lz4 ($(gmsv_lz4_config)) ===="
	@${MAKE} --no-print-directory -C . -f gmsv_lz4.make config=$(gmsv_lz4_config)
endif

helpers:
ifneq (,$(helpers_config))
	@echo "==== Building helpers ($(helpers_config)) ===="
	@${MAKE} --no-print-directory -C ../../../../garrysmod_common/projects/linux/gmake2 -f helpers.make config=$(helpers_config)
endif

lua_shared:
ifneq (,$(lua_shared_config))
	@echo "==== Building lua_shared ($(lua_shared_config)) ===="
	@${MAKE} --no-print-directory -C ../../../../garrysmod_common/projects/linux/gmake2 -f lua_shared.make config=$(lua_shared_config)
endif

clean:
	@${MAKE} --no-print-directory -C . -f gmsv_lz4.make clean
	@${MAKE} --no-print-directory -C ../../../../garrysmod_common/projects/linux/gmake2 -f helpers.make clean
	@${MAKE} --no-print-directory -C ../../../../garrysmod_common/projects/linux/gmake2 -f lua_shared.make clean

help:
	@echo "Usage: make [config=name] [target]"
	@echo ""
	@echo "CONFIGURATIONS:"
	@echo "  releasewithsymbols_x86"
	@echo "  release_x86"
	@echo ""
	@echo "TARGETS:"
	@echo "   all (default)"
	@echo "   clean"
	@echo "   gmsv_lz4"
	@echo "   helpers"
	@echo "   lua_shared"
	@echo ""
	@echo "For more information, see https://github.com/premake/premake-core/wiki"